<% include ../partials/boilerplate2 %>

<div class='hero'>
  <h1> Your Food List! </h1>

<a class='searchFood' href='/food/food-search'> Search for food! <a>
</div>
<!--loops through database nutri and appends them to page--!>
  <div class='nutri-container'>
    <% for (let nutri of data) { %>
      <div class='nutri'>
        <h2><%= data.food %></h2>

        <div class="line"></div>
        <h2><%= nutri.food %></h3>
        <h3><%= nutri.brand %></h3>
        <div class ='links'>
          <a class="edit" class='link' href='/nutri/<%= nutri.id%>'>Details</a>
          <form method='POST' action='/nutri/<%= data.id%>?_method=DELETE'>
            <input class="delete" type='submit' value='Delete' />
            <hr>
          </form>
      </div>
    </div>
  <% } %>
</div>


<% include ../partials/end %>
